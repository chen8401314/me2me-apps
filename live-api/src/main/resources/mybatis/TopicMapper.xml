  <select id="getRandomDropaRoundAlgorithm" resultMap="BaseResultMap" parameterType="java.util.Map">
    select t.*, (5000+c.read_count_dummy)*POW(0.95,datediff(now(),t.update_time)) as orderCount
    from topic t,content c
    where t.id=c.forward_cid
    and c.status=0 and c.type=3
    and t.status=0
    AND t.uid != #{uid}
    <if test="set != ''">
      and t.id NOT IN (${set})
    </if>
    AND NOT FIND_IN_SET(#{uid},SUBSTR(t.core_circle ,2, LENGTH(t.core_circle)-2))
    order by orderCount DESC
    limit 1;
  </select>

  <select id="getMyLivesByUpdateTimeNew" resultMap="BaseResultMap2" parameterType="java.util.Map">
    SELECT * FROM (
    SELECT m.*,CASE WHEN c.is_top=1 THEN 1 ELSE 0 END AS istop,
    CASE WHEN c.is_top=1 THEN m.long_time*100 ELSE m.long_time END AS longtime
    FROM
    (SELECT t.*
    FROM topic t,live_favorite f
    WHERE t.id=f.topic_id
    AND f.uid=#{uid}
    UNION
    SELECT t1.*
    FROM topic t1
    ) m LEFT JOIN topic_user_config c ON m.id=c.topic_id AND c.uid=#{uid}
    ) n
    WHERE n.longtime &lt; #{updateTime}
    ORDER BY n.longtime DESC
    LIMIT 10;
  </select>
  
